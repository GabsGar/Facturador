@model Facturador.Models.Clientes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-dark">Crear Cliente</h2>
<br />

<form method="post" asp-action="Create">
    <div class="p-4 border border-dark rounded">
        <input hidden asp-for="UsoCFDI" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="Nombre" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="Nombre" class="form-control border border-dark" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="RFC" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="RFC" class="form-control border border-dark" />
            </div>
            <span asp-validation-for="RFC" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="UsoCFDI" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="UsoCFDI" disabled class="form-control border border-dark" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Crear Cliente" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Regreso a Lista de Clientes</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

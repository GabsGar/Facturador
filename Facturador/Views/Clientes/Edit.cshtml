@model Facturador.Models.Clientes

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-dark">Editar Cliente</h2>
<br />

<form asp-action="Edit">
    <div class="p-4 border border-dark rounded">
        <input hidden asp-for="Id" />
        <input hidden asp-for="UsoCFDI" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="Nombre" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="Nombre" class="form-control border border-dark" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="RFC" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="RFC" class="form-control border border-dark" />
            </div>
            <span asp-validation-for="RFC" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-12">
                <strong>
                    <label asp-for="UsoCFDI" class="control-label"></label>
                </strong>
            </div>
            <div class="col-12">
                <input asp-for="UsoCFDI" readonly class="form-control border border-dark" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Actualizar Cliente" />
            <a asp-action="Index" class="btn btn-success">Regreso a Lista de Clientes</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
